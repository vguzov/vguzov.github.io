---
layout: default
---

<div class="post">
    <header class="post-header">
    {% if page.cv_link %}
    <h1 class="post-title">{{ page.title }} <a href="{{ page.cv_link }}" target="_blank" rel="noopener noreferrer" class="float-right"><i class="fas fa-file-pdf"></i></a></h1>
    {% else %}
    <h1 class="post-title">{{ page.title }} {% if page.cv_pdf %}<a href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url}}" target="_blank" rel="noopener noreferrer" class="float-right"><i class="fas fa-file-pdf"></i></a>{% endif %}</h1>
    {% endif %}
    <p class="post-description">{{ page.description }}</p>
    </header>


    <div class="clearfix">
    {{ content }}
    </div>

</div>

<div style="width: 100%; height:1500">
{% if page.cv_link %}
<iframe src="{{ page.cv_link }}" width="100%" height="1500" >
{% else %}
<iframe src="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url}}" width="100%" height="1500">
{% endif %}
Please click on the icon on the top right to download my CV if it does not show up in your browser.
</iframe>
</div>

